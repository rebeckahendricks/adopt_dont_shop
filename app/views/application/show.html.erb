<h1><%= @application.name %></h1>
<h3>Street Address: <%= @application.street_address %></h3>
<h3>City: <%= @application.city %></h3>
<h3>Zipcode: <%= @application.zipcode %></h3>
<h3>State: <%= @application.state %></h3>
<h3>Description: <%= @application.description %></h3>
<h3>Status: <%= @application.status %></h3>
<h3 id="pets">Pets I am interested in: <ul><% @application.pets.each do |pet| %>
    <li><%= link_to "#{pet.name}", "/pets/#{pet.id}" %>
  <% end %></ul></h3>

<h3>Add a Pet to this Application</h3>
<%= form_with url: "/applications/#{@application.id}/", method: :patch, local: true do |f| %>
  <%= f.label :query, "Search for:" %>
  <%= f.text_field :query %>
  <%= f.submit "Search" %>
<% end %>
<ul id="results">
<% @pets.each do |pet| %>
  <li><%= pet.name %><%= button_to("Adopt this pet", :pet_name => pet.id) %>
<% end %>
</ul>
